<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.QrCodeScanner" parent="Theme.Material3.DayNight.NoActionBar"/>

    <style name="Theme.QrCodeScanner" parent="Base.Theme.QrCodeScanner" />

    <style name="Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/PrimaryText</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/PrimaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">48dp</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="backgroundTint">@color/TransparentWhite</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="iconTint">@color/white</item>
    </style>

    <style name="TextButton" parent="RoundedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>

        <item name="iconGravity">textStart</item>
    </style>
</resources>